@model Product



<div class="container">
    <div class="row">

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5>@Model.ProductName</h5>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">@Model.ProductName</h5>
                    <p class="card-text">@Model.Color.ColorName</p>
                    <p class="card-text">@Model.Brand.BrandName</p>
                    <p class="card-text">@Model.Size.SizeName</p>
                    <p class="card-text">@Model.Category.CategoryName</p>
                    <a  class="btn btn-danger text-white float-right mr-1">Add To Basket</a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger float-right mr-1">Back</a>
                </div>
            </div>
        </div>
    </div>
        <br />
    <div class="row">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                    <div class="card-body p-4">
                        <div class="form-outline mb-4">
                            <input type="text" id="addANote" class="form-control" placeholder="Type comment..." />
                            <label class="form-label" for="addANote">+ Add a note</label>
                        </div>
                        @foreach (var item in Model.Comments)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <ul>
                                        <li> @item.Comments</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                   
                   






                                    
















