@model UserLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="card-title">
                                <h4>REV Boutique Shop</h4>
                            </div>

                            <form class="pt-3" method="post" asp-controller="Login" asp-action="Index">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" asp-for="UserName" placeholder="please input username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="please input password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <div class="mt-3">
                                    <button class="btn btn-primary" type="submit">Login</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Remember Me
                                        </label>
                                    </div>

                                </div>

                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account, create it? <a asp-action="Index" asp-controller="Register" class="text-primary">Register</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
